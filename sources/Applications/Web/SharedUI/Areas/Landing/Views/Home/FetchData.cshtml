@model ICollection<IWeatherForecastDTO>
@inject MvcApplicationModel appModel

<h1>Weather forecast</h1>

<p>
     This page demonstrates fetching data from a
     @{
          @if (appModel.CommunicationWay == MvcCommunicationWay.Direct)
          {
               <strong>business layer</strong>
          }
          else {
               <strong>api call</strong>
          }
     }
</p>

<table class="table">
     <thead>
          <tr>
               <th>Date</th>
               <th>Temp. (C)</th>
               <th>Temp. (F)</th>
               <th>Summary</th>
          </tr>
     </thead>
     <tbody>
          @foreach (var forecast in Model)
          {
               <tr>
                    <td>@forecast.Date.ToShortDateString()</td>
                    <td>@forecast.TemperatureC</td>
                    <td>@forecast.TemperatureF</td>
                    <td>@forecast.Summary</td>
               </tr>
          }
     </tbody>
</table>